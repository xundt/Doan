@model ForKids.Models.AddNewProgram

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    form {
        max-width: 500px;
        margin: auto;
    }

    label {
        display: block;
        margin-top: 10px;
        font-weight: bold;
    }

    input[type="text"], textarea {
        width: 100%;
        padding: 8px;
        margin-top: 5px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    button {
        padding: 10px 15px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        button:hover {
            background-color: #45a049;
        }
</style>
<h2>Add New Program</h2>

<body>
    <form method="post">
    <div class="mt-3">
        <label class="from-label">Name</label>
        <input type="text" class="form-control" asp-for = "Programsname" />
    </div>
    <div class="mt-3">
        <label class="from-label">Name</label>
        <input type="text" class="form-control" asp-for = "AgeGroup" />
    </div>
    <div class="mt-3">
        <label class="from-label">Name</label>
        <input type="text" class="form-control" asp-for="Descriptions" />
    </div>
    <div class="mt-3">
        <label class="from-label">Name</label>
        <input type="text" class="form-control" asp-for="Prince" />

    </div>
    <div class="mt-3">
        <button type="submit">Save</button>
    </div>
    </form>
</body>

